{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "status": {
      "type": "number",
      "required": true,
      "default": "0"
    }
  },
  "validations": [],
  "relations": {
    "affiliations": {
      "type": "hasMany",
      "model": "affiliation",
      "foreignKey": "affiliationId",
      "through": "useraffiliation"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "accessToken",
      "foreignKey": "userId"
    },
    "identities": {
      "type": "hasMany",
      "model": "userIdentity",
      "foreignKey": "userId"
    },
    "credentials": {
      "type": "hasMany",
      "model": "userCredential",
      "foreignKey": "userId"
    },
    "roles": {
       "type": "hasMany",
       "model": "Role",
       "through": "roleMapping",
       "foreignKey": "principalId"
    },
    "submissions": {
      "type": "hasMany",
      "model": "submission",
      "foreignKey": "authorId",
      "keyThrough": "authorId",
      "through": "authorship"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "*",
      "accessType": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authorOwner",
      "permission": "ALLOW",
      "property": [
        "__get__submissions",
        "__findById__submissions",
        "__count__submissions",
        "__create__submissions"
      ]
    },
    {
      "principalId": "chair",
      "principalType": "ROLE",
      "permission": "ALLOW",
      "property": [
        "find",
        "__delete__roles",
        "__link__roles",
        "__destroyById__roles",
        "author",
        "reviewer"
      ]
    }
  ],
  "methods": {}
}
